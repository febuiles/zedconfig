[
    {
        "context": "Editor",
        "bindings": {
            "ctrl-s": [
                "buffer_search::Deploy",
                {
                    "focus": true
                }
            ],
            "ctrl-y": "editor::Paste",
            "cmd-w": "editor::Copy",
            "ctrl-w": "editor::Cut",
            "ctrl-x ctrl-s": "workspace::Save",
            "ctrl-x ctrl-f": "workspace::NewFile",
            "ctrl-x b": "file_finder::Toggle",
            "f3": "dock::FocusDock",
            "cmd-x": "command_palette::Toggle",
            "ctrl-x k": "pane::CloseActiveItem",
            "cmd-v": [
                "editor::MovePageUp",
                {
                    "center_cursor": true
                }
            ]
        }
    },
    // use ctrl-s/ctrl-r in the search bar
    {
        "context": "BufferSearchBar > Editor",
        "bindings": {
            "escape": "buffer_search::Dismiss",
            "tab": "buffer_search::FocusEditor",
            "ctrl-s": "search::SelectNextMatch",
            "ctrl-r": "search::SelectPrevMatch"
        }
    },
    {
        "context": "Dock",
        "bindings": {
            "cmd-0": "dock::HideDock"
        }
    }
]
